{
	"UV Dockerfile": {
		"prefix": "uv-docker",
		"body": [
			"FROM python:${1:3.12-slim}",
			"",
			"# Set the working directory",
			"WORKDIR /${2:app}",
			"",
			"# Install uv globally",
			"RUN pip install uv",
			"",
			"# Copy project definition files to the working directory",
			"COPY ${3:pyproject.toml uv.lock} ./",
			"",
			"# Install dependencies using uv",
			"RUN uv sync --no-cache",
			"",
			"# Copy the rest of the application code",
			"COPY . .",
			"",
			"# Expose the application port",
			"EXPOSE ${4:8881}",
			"",
			"# Command to run the application",
			"CMD [\"uv\", \"run\", \"--host=0.0.0.0\", \"--port=${4}\", \"${5:main:app}\"]",
			""
		],
		"description": "Generate a Dockerfile for a Python project using UV"
	}
}
